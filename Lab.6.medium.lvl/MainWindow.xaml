<Window x:Class="Lab._6.medium.lvl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab._6.medium.lvl"
        mc:Ignorable="d"
       Title="Lab6" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="inputTextBox" Text="Введите массив из 9 вещественных чисел через пробел" Width="340" Margin="15"/>
            <Button Content=" Вычислить среднее арифметическое элементов" Click="Button_Click" Margin="5"/>
            <TextBlock x:Name="resultTextBlock" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
